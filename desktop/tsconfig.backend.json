{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false
  },
  "include": [
    "backend/**/*",
    "shared-types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "windows"
  ]
}

